using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace MyFirstApp
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Как вас зовут?: ");
            string userName = Console.ReadLine();
            Console.Write("Сколько вам лет?: ");
            int howOldUser = Convert.ToInt32(Console.ReadLine());
            Console.Write("\nКакой ваш знак зодиака?: ");
            string userZodiak = Console.ReadLine();
            Console.Write("\nГде вы работаете?: ");
            string userWork = Console.ReadLine();

            Console.WriteLine("Вас зовут {0}, вам {1} лет, ваш знак зодиака это {2}, и вы работаете {3}", userName, howOldUser, userZodiak, userWork);
        }
    }
}
